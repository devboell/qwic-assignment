{
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": "airbnb",
  "env": {
    "browser": true,
    "node": true,
    "jest": true,
    "es6": true
  },
  "globals": {
    "shallow": false,
    "mount": false,
    "render": false
  },
  "plugins": ["react", "import"],
  "rules": {
    "no-console": 1,
    "semi": ["error", "never"],
    "import/no-unresolved": 2,
    "import/no-named-as-default": 0,
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/react-in-jsx-scope": 2,
    "react/jsx-filename-extension": 0,
    "react/jsx-wrap-multilines": 0
  }
}
